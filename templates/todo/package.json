{
  "name": "litpwapackagenameplaceholder",
  "version": "1.0.0",
  "description": "A fully working simple PWA",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "wireit",
    "build": "wireit",
    "serve": "wireit",
    "test": "wtr",
    "test:debug": "npm run test -- --watch",
    "accTest": "wireit"
  },
  "keywords": [
    "es6",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:lit/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "lit"],
    "rules": {
      "lit/no-legacy-template-syntax": "error",
      "lit/no-template-arrow": "warn"
    }
  },
  "dependencies": {
    "lit": "^2.8.0",
    "@lit-labs/context":"0.4.0",
    "urlpattern-polyfill" : "^9.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "9.4.0",
    "@web/test-runner": "^0.17.0",
    "@web/test-runner-playwright": "^0.10.1",
    "playwright": "1.37.1",
    "@playwright/test": "1.37.1",
    "@web/dev-server-esbuild": "^0.4.1",
    "@open-wc/testing" : "3.2.0",
    "@types/mocha":"10.0.1",
    "@types/chai": "4.3.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-plugin-lit": "^1.9.1",
    "esbuild-register": "3.4.2",
    "typescript": "^5.1.6",
    "wireit": "0.10.0"
  },
  "wireit": {
    "accTest": {
      "command" : "npx cucumber-js",
      "dependencies": [
        "startTest"
      ]
    },
    "buildDevSw": {
      "command": "node build/buildSw.js -dev",
      "clean": true,
      "output": [
        "public/scripts/service-worker.js",
        "public/scripts/service-worker.js.map"
      ],
      "files": ["src/service-worker/**/*.ts"],
      "dependencies": [
        "buildDev"
      ]
    },
    "buildProdSw": {
      "command": "node build/buildSw.js",
      "clean": true,
      "output": [
        "public/scripts/service-worker.js",
        "public/scripts/service-worker.js.map"
      ],
      "files": ["build/buildSw.js","src/service-worker/**/*.ts"],
      "dependencies": ["build"]
    },
    "buildDev": {
      "command": "node build/buildApp.js -dev",
      "clean": true,
      "files": ["src/**/*.ts", "!src/service-worker/**/*"],
      "output": ["public/scripts/**/*.js"]
    },
    "build": {
      "command": "node build/buildApp.js",
      "clean": true,
      "files": ["src/**/*.ts", "!src/service-worker/**/*"],
      "output": ["public/scripts/**/*.js"]
    },
    "start": {
      "command": "node build/buildApp.js -dev -serve -open",
      "clean": true,
      "files": ["src/**/*.ts", "!src/service-worker/**/*"],
      "dependencies": [ "buildDevSw" ],
      "service": true
    },
    "startTest": {
      "command": "node build/buildApp.js -dev -serve",
      "clean": true,
      "files": ["src/**/*.ts", "!src/service-worker/**/*"],
      "dependencies": [ "buildDevSw" ],
      "service": true
    },
    "serve": {
      "command": "node build/buildApp.js -serve -open",
      "clean": true,
      "files": ["src/**/*.ts", "!src/service-worker/**/*"],
      "dependencies": [ "buildProdSw" ],
      "service": true
    }
  }
}
