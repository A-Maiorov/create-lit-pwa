{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "outDir": "../public/scripts",
    "moduleResolution": "node",
    "module": "es2022",
    "target": "es2022",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "checkJs": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "service-worker", "public"],
  "include": ["./src/**/*", "tests"],
  "types": ["lit"]
}
